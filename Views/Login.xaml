<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="slunaExamen.Views.Login"
             Title="Login"
             Padding="25">
    <VerticalStackLayout Spacing="20">

        <Image Source="logo.png" HeightRequest="100" HorizontalOptions="Center" />

        <Label Text="Inicio de Sesión"
               FontSize="20"
               TextColor="{StaticResource AccentColor}"
               HorizontalOptions="Center" />

        <Entry x:Name="entryUser" Placeholder="Usuario"/>
        <Entry x:Name="entryPassword" Placeholder="Contraseña" IsPassword="True"/>

        <Button Text="Iniciar sesión" Clicked="OnLoginClicked"/>
        <Button Text="Acerca de" Clicked="OnAcercaDeClicked"/>

    </VerticalStackLayout>
</ContentPage>