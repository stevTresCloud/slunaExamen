<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="slunaExamen.Views.AcercaDe"  
            Title="AcercaDe">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Usuario conectado -->
            <Label x:Name="lblUsuario"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Red"
                   HorizontalOptions="Center" />

            <!-- Título -->
            <Label Text="ACERCA DE"
                   FontSize="22"
                   TextColor="Blue"
                   HorizontalOptions="Center" />

            <!-- Información -->
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                  ColumnSpacing="10"
                  RowSpacing="10">

                <Label Text="Nombre del Estudiante:" Grid.Row="0" Grid.Column="0"/>
                <Label Text="Steven Luna" Grid.Row="0" Grid.Column="1"/>

                <Label Text="Materia:" Grid.Row="1" Grid.Column="0"/>
                <Label Text="Aplicaciones Móviles" Grid.Row="1" Grid.Column="1"/>

                <Label Text="Curso:" Grid.Row="2" Grid.Column="0"/>
                <Label Text="Octavo A" Grid.Row="2" Grid.Column="1"/>

                <Label Text="Universidad:" Grid.Row="3" Grid.Column="0"/>
                <Label Text="UISRAEL" Grid.Row="3" Grid.Column="1"/>

                <Label Text="Examen:" Grid.Row="4" Grid.Column="0"/>
                <Label Text="Primer parcial" Grid.Row="4" Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>